@{
    ViewData["Title"] = "Home Page";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="text-center">
    <div class="card">
        <div class="card-header">
            <div style="align-content: baseline; align-items: baseline; display: flex;">
                <p style="flex-grow: 1;">Let's get a Random Jokes and Count</p>
                <div class="dropdown">
                    <i class="bi bi-three-dots-vertical" style="font-size: 25px; color: rgb(108, 117, 125);"></i>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <p id ="punchline"></p><br>
                    <p id="setup"></p>
                    <div style = "display:none" id="parentDiv"><b>Jokes count : </b><span id="count"></span></div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button id="nextJoke" type="button" class="btn btn-primary" style="margin-right: 1em;">Next Joke</button>
            <button id="jokeCount" type="button" class="btn btn-secondary">Jokes Count</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function()
    {
        GetJokes();
    });
</script>
